<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sample_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/led"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED Control"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_x="11px"
            android:layout_y="13px"
            >
        </TextView>
        <CheckBox
            android:id="@+id/led1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="13px"
            android:layout_y="50px"
            >
        </CheckBox>
        <CheckBox
            android:id="@+id/led2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="62px"
            android:layout_y="50px"
            >
        </CheckBox>
        <CheckBox
            android:id="@+id/led3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="112px"
            android:layout_y="50px"
            >
        </CheckBox>
        <CheckBox
            android:id="@+id/led4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="162px"
            android:layout_y="50px"
            >
        </CheckBox>
        <CheckBox
            android:id="@+id/led5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="215px"
            android:layout_y="50px"
            >
        </CheckBox>

        <CheckBox
            android:id="@+id/led6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="267px"
            android:layout_y="50px"
            >
        </CheckBox>

        <CheckBox
            android:id="@+id/led7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="319px"
            android:layout_y="50px"
            >
        </CheckBox>
        <CheckBox
            android:id="@+id/led8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="371px"
            android:layout_y="50px"
            >
        </CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="adapter" />
    </LinearLayout>>
</LinearLayout>